<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:nfcReader="clr-namespace:NFCReader"
             Shell.NavBarHasShadow="False"
             x:DataType="nfcReader:MainViewModel"
             x:Class="NFCReader.MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label x:Name="_messageLabel" FontSize="18" Text="{Binding Message}"></Label>
        <Label FontSize="20" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Text="{Binding NfcTag}"></Label>
    </StackLayout>

</ContentPage>
